module Plasmacore

$include Plasmacore/VulkanRenderer

class MoltenVKRenderer : VulkanRenderer [essential]
  PROPERTIES
    native "void* ca_metal_layer;"

  GLOBAL METHODS
    method create( ca_metal_layer:RogueVoidPointer )->MoltenVKRenderer [essential]
      local result = MoltenVKRenderer()
      native @|$result->ca_metal_layer = $ca_metal_layer.value;
      Display.renderer = result
      return result

  METHODS
    method init

endClass
